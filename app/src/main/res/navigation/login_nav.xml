<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.android.bookingapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/confrimFragment"
        android:name="com.android.bookingapp.ConfirmFragment"
        android:label="fragment_confrim"
        tools:layout="@layout/fragment_confrim" >
        <action
            android:id="@+id/action_confrimFragment_to_moreInfoFragment"
            app:destination="@id/moreInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.android.bookingapp.registerFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_confrimFragment"
            app:destination="@id/confrimFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreInfoFragment"
        android:name="com.android.bookingapp.moreInfoFragment"
        android:label="fragment_more_info"
        tools:layout="@layout/fragment_more_info" >
        <action
            android:id="@+id/action_moreInfoFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>